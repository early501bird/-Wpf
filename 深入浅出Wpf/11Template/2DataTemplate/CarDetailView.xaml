<UserControl x:Class="Wpf._11Template.CarDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf._11Template">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="6">
        <StackPanel Margin="5">
            <Image Name="ImagePhoto" Width="400" Height="250"/>
            <StackPanel Orientation="Horizontal" Margin="5,0">
                <TextBlock Text="Name:" FontWeight="Bold" FontSize="20"/>
                <TextBlock Name="TextBlockName" FontSize="20" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Automaker:" FontWeight="Bold"/>
                <TextBlock Name="TextBlockAutomaker" Margin="5,0"/>
                <TextBlock Text="Year:" FontWeight="Bold"/>
                <TextBlock Name="TextBlockYear" Margin="5,0"/>
                <TextBlock Text="Top Speed:" FontWeight="Bold"/>
                <TextBlock Name="TextBlockTopSpeed" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
