<Window x:Class="Wpf._4.xStaticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf._4"
        mc:Ignorable="d"
        Title="{x:Static local:xStaticWindow.WindowTitle}" Height="300" Width="300">
    <StackPanel>
        <TextBlock FontSize="32" Text="{x:Static local:xStaticWindow.ShowText}"/>
    </StackPanel>
</Window>
