<Window x:Class="Wpf._4.MyButtonTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf._4"
        mc:Ignorable="d"
        Title="MyButtonTypeWindow" Height="300" Width="300">
    <StackPanel>
        <local:MyButton Content="Show" UserWindowType="{x:Type TypeName=local:MyButtonType}" Margin="5"/>
    </StackPanel>
</Window>
